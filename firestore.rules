rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Hall of Fame: Public Read, No Client Write
    match /stories/{storyId} {
      allow read: if true;
      allow write: if false; // Only the Backend Admin SDK can write here
    }
    
    // Subscribers collection for email sign-ups
    match /subscribers/{subscriberId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Allow users to read/write their own private stories if needed in future
    match /private_stories/{userId}/{storyId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
